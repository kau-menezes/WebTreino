<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="img/bosch-symbol.png">

    <!-- LINK BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   
    <!-- ESTILIZAÇÃO GERAL -->
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/header.css">

    <!-- ESTILIZAÇÃO PRÓPRIA DA PÁGINA -->
    <link rel="stylesheet" href="css/cards.css">
    
    <title>Página Inicial</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div >
                    <a class="d-flex gap-2" href="./index.ejs">
                        <h4 id="highlight-title">CONTROLE</h4> 
                        <h4> de Estudantes</h4>
                    </a>
                </div>
                <ul class="navbar-nav d-flex flex-row align-items-center">
                    <li class="nav-item">
                        <h6>Cadastrar:</h6>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./cadAluno">Alunos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./cadSala">Sala</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="d-flex flex-column main-container">
        <div class="container mt-auto">
            <div class="row justify-content-end">
                <div class="col-sm-3 mt-5">
                    <select id="studentClassInput" name="studentClassFilter" class="form-select" aria-label="Default select example">
                        <option hidden value="">Sala</option>
                        <% if (salas && salas.length > 0) { %>
                            <% for(let i = 0; i < salas.length; i++) { %>
                                <option value='<%= salas[i].IDSala %>'> <%= salas[i].Nome %> </option>
                            <% } %>
                        <% } else { %>
                            <option disabled>No rooms available</option>
                        <% } %>
                </div>
            </div>
        </div>
        <div id="cards" class="container">
            <div class="row d-flex flew-wrap gap-3">
                <% if (alunos && alunos.length > 0) { %>
                    <% for(let i = 0; i < salas.length; i++) { %>
                        <div class="card" style="width: 18rem;">
                            <img src="img/aluno1.jpg" class="card-img-top mt-3" alt="Aluno">
                            <div class="card-body d-flex flex-column align-items-center">
                              <h5 class="card-title"> <% alunos[i].Nome %> </h5>
                              <p class="card-text">Idade: <% alunos[i].Idade %> ></p>
                              <a href="#" class="btn btn-secondary">Editar</a>
                            </div>
                    <% } %>
                <% } else { %>
                    <option disabled>No rooms available</option>
                <% } %>
            </div>
        </div>
        <img src="img/bosch-line.png" class="fixed-bottom"alt="">
    </main>
</body>
</html>
