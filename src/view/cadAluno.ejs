<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- BOOTSTRAP LINK -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- MATERIAL ICONS LINK -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- STYLESHEETS LINK -->
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/header.css">
    
    <!-- ESTILIZAÇÃO PRÓPRIA DA PÁGINA -->
    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" href="img/bosch-symbol.png">

    <!-- SCRIPT -->
    <script src="js/loadPic.js" defer></script>

    <title>Cadastro Alunos</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div>
                    <a class="d-flex gap-2" href="/">
                        <h4 id="highlight-title">CONTROLE</h4> 
                        <h4> de Estudantes</h4>
                    </a>
                </div>
                <ul class="navbar-nav d-flex flex-row align-items-center">
                    <li class="nav-item">
                        <h6>Cadastrar:</h6>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Alunos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadSala">Sala</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="d-flex flex-column justify-content-center">
        <div class="row d-flex flex-column align-items-center mb-5">
            <form method="post" class="col-lg-4" enctype="multipart/form-data">
                <div class="container d-flex flex-column align-items-center">
                    <label id="avatar-label" for="avatar-input"><img id='avatar-img' src="img/user-logo.png" alt=""></label>
                    <input id="avatar-input" name="studentAvatarInput"type="file" class="form-control-file" accept="image/png, image/jpeg" />
                </div>
                <div class="mb-3">
                    <label for="studentNameInput" class="form-label">Nome</label>
                    <input type="text" class="form-control" name="studentNameInput">
                </div>
                <div class="mb-3">
                    <label for="studentAgeInput" class="form-label">Idade</label>
                    <input type="number" class="form-control" name="studentAgeInput">
                </div>
                <div class="mb-3">
                    <label for="studentGenderInput" class="form-label">Gênero</label>
                    <select name="studentGenderInput" class="form-select" aria-label="Default select example">
                        <option hidden>Gênero</option disabled>
                        <option value="Feminino">Feminino</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Outro">Outro</option>
                      </select>
                </div>
                <div class="mb-3" >
                    <label for="studentClassInput" class="form-label">Sala</label>
                    <select id="studentClassInput" name="studentClassInput" class="form-select" aria-label="Default select example">
                        <option hidden value="">Sala</option>
                        <% if (salas && salas.length > 0) { %>
                            <% for(let i = 0; i < salas.length; i++) { %>
                                <% if (salas[i].Capacidade > salas[i].qtdAlunos) { %>
                                    <option value='<%= salas[i].IDSala %>'> <%= salas[i].Nome %> </option>
                                <% } %>
                            <% } %>
                        <% } else { %>
                            <option disabled>Sem salas disponíveis</option>
                        <% } %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
        <img src="img/bosch-line.png" class="fixed-bottom" alt="">
    </main>
    <footer>
    </footer>
</body>
</html>